<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Requests">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_request_lists"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>


    <ImageView
        android:id="@+id/No_request"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:background="@drawable/ic_notifications_off_black_24dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:alpha=".2"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Friend Request "
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:textSize="13dp"
        android:alpha=".2"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/No_request"
        android:visibility="gone"/>

</RelativeLayout>