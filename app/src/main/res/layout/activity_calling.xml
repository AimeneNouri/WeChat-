<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CallingActivity">

    <ImageView
        android:id="@+id/profile_image_calling"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/profile_image"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/name_calling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="username"
        android:textStyle="bold"
        android:textSize="30dp"
        android:maxLines="5"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:layout_above="@+id/txt"/>

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="140dp"
        android:gravity="center"
        android:maxLines="5"
        android:text="calling..."
        android:textColor="#777676"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/icon_padding"
        android:layout_width="match_parent"
        android:layout_height="@dimen/remote_back_icon_margin_bottom"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:id="@+id/control_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_make_cal"
            android:layout_width="@dimen/call_button_size"
            android:layout_height="@dimen/call_button_size"
            android:background="@drawable/btn_startcall"
            android:layout_marginRight="80dp"
            android:visibility="gone"/>

        <!--<ImageButton
            android:id="@+id/btn_end_call_receiver"
            android:layout_width="@dimen/call_button_size"
            android:layout_height="@dimen/call_button_size"
            android:background="@drawable/btn_endcall"
            android:visibility="gone"/>-->

        <ImageButton
            android:id="@+id/btn_end_call"
            android:layout_width="@dimen/call_button_size"
            android:layout_height="@dimen/call_button_size"
            android:background="@drawable/btn_endcall" />

    </LinearLayout>


</RelativeLayout>