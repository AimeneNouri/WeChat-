<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:id="@+id/bottomSheet_Cont"
    android:layout_marginTop="20dp"
    android:layout_height="wrap_content">

       <LinearLayout
        android:background="@drawable/save"
        android:id="@+id/images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_margin="3dp"
            android:padding="5dp"
            android:background="@drawable/image_icon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Images"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/bottom_sheet_chat_background"
        android:id="@+id/videos"
        android:layout_below="@+id/images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_margin="3dp"
            android:padding="5dp"
            android:background="@drawable/videos"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Videos"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pdf"
        android:background="@drawable/bottom_sheet_chat_background"
        android:layout_below="@+id/videos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_margin="3dp"
            android:padding="5dp"
            android:background="@drawable/pdf_icon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PDF Files"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="center_vertical"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/word"
        android:layout_below="@+id/pdf"
        android:background="@drawable/forward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_margin="4dp"
            android:padding="5dp"
            android:background="@drawable/word_icon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ms Word Files"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <Button
        android:id="@+id/cancel_delete_button"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/word"
        android:text="Cancel"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:background="@drawable/deletefor_me"
        android:gravity="center"/>

</RelativeLayout>