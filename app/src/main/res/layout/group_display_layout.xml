<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/friend"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/group_image"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/group_image2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/group_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginTop="15dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/message_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textAlignment="textStart"
                    android:textSize="13sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="2dp"
                android:layout_marginTop="3dp">

                <TextView
                    android:id="@+id/sender_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginStart="2dp"
                    android:textAlignment="textStart"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imagePhoto"
                    android:layout_width="20dp"
                    android:layout_height="19dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/ic_photo_camera_black_24dp"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/videoMessage"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/video"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/documentFile"
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/ic_insert_drive_file_black_24dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/group_members"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAlignment="textStart"
                    android:textSize="16sp" />


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_below="@+id/friend"
        android:layout_width="wrap_content"
        android:layout_marginStart="82dp"
        android:layout_height="0.5dp"
        android:background="#B3B3B3"/>

</RelativeLayout>
