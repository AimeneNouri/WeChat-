<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


   <RelativeLayout
       android:layout_width="match_parent"
       android:id="@+id/mLinearLayout"
       android:layout_height="wrap_content">

       <de.hdodenhof.circleimageview.CircleImageView
           android:id="@+id/users_profile_image"
           android:layout_width="55dp"
           android:layout_marginStart="5dp"
           android:layout_height="55dp"
           android:layout_marginTop="10dp"
           android:src="@drawable/profile_image" />

       <de.hdodenhof.circleimageview.CircleImageView
           android:id="@+id/user_online_status"
           android:layout_width="15dp"
           android:layout_height="14dp"
           android:layout_marginStart="-15dp"
           android:layout_marginTop="53dp"
           android:layout_toEndOf="@+id/users_profile_image"
           android:src="@drawable/online"
           android:visibility="invisible" />

       <TextView
           android:id="@+id/user_profile_name"
           android:layout_width="170dp"
           android:layout_height="wrap_content"
           android:layout_marginStart="15dp"
           android:layout_marginTop="10dp"
           android:layout_toEndOf="@+id/users_profile_image"
           android:text="user name"
           android:textAlignment="textStart"
           android:textColor="@color/black"
           android:textSize="17sp"
           android:textStyle="bold" />

       <TextView
           android:id="@+id/user_status"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/user_profile_name"
           android:layout_marginStart="16dp"
           android:layout_marginTop="2dp"
           android:layout_toEndOf="@+id/users_profile_image"
           android:text="user status"
           android:textAlignment="textStart"
           android:textSize="13sp" />

       <ImageButton
           android:id="@+id/CallVoiceBtn"
           android:layout_width="44dp"
           android:layout_height="44dp"
           android:layout_marginStart="5dp"
           android:layout_marginTop="14dp"
           android:layout_toEndOf="@+id/user_profile_name"
           android:background="@drawable/voice_call" />

       <ImageButton
           android:id="@+id/CallVideoBtn"
           android:layout_width="42dp"
           android:layout_height="43dp"
           android:layout_marginTop="14dp"
           android:layout_marginStart="15dp"
           android:layout_toEndOf="@+id/CallVoiceBtn"
           android:background="@drawable/btn_video_call"/>

   </RelativeLayout>

    <View
        android:layout_below="@+id/mLinearLayout"
        android:layout_width="wrap_content"
        android:layout_marginStart="77dp"
        android:layout_marginTop="5dp"
        android:layout_height="0.5dp"
        android:background="#B3B3B3"/>

</RelativeLayout>