<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/layout"
    android:layout_height="match_parent"
    android:background="@drawable/background_discussion"
    tools:context=".Chat">

    <include
        android:id="@+id/chat_toolbar"
        layout="@layout/app_bar_layout"/>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat_toolbar"
        android:layout_above="@+id/mLinearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chat_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textColor="@android:color/background_dark"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="60dp"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:padding="3dp"
        android:id="@+id/mLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/send_files_btn"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:padding="2dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_add_black_24dp" />

        <EditText
            android:id="@+id/input_chat_message"
            android:layout_width="300dp"
            android:layout_height="42dp"
            android:hint="Enter The Text Message..."
            android:background="@drawable/inputdiscussion"
            android:padding="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="2dp">
        </EditText>

        <ImageButton
            android:id="@+id/send_msg_button"
            android:layout_width="40dp"
            android:layout_marginTop="7dp"
            android:layout_height="38dp"
            android:layout_marginStart="2dp"
            android:src="@drawable/ic_send_black_24dp"
            android:background="@drawable/sendmessagebtn"/>

    </LinearLayout>
</RelativeLayout>