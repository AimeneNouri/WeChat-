<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.groupInfo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/gradientlogin">

        <TextView
            android:id="@+id/group_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="15dp"
            android:text="room name"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="32sp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/group_profile_image"
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="170dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/group_image3" />

    <TextView
        android:id="@+id/text_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:text="Room admin :"
        android:layout_below="@id/group_profile_image"
        android:textColor="#46144C"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:layout_marginBottom="5dp"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/group_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:text="room admin"
        android:layout_below="@id/text_admin"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/remove_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_admin"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="65dp"
        android:elevation="4dp"
        android:background="@drawable/send_message_request"
        android:text="Remove Room"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:padding="4dp"
        android:textStyle="bold"
        android:visibility="gone"/>

</RelativeLayout>