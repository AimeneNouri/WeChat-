<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradientlogin">

    <ImageButton
        android:id="@+id/backToMainActivity"
        android:layout_width="13dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/chevron"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/groupPicture"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/group_image3"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/backToMainActivity"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:cropToPadding="true"/>

    <RelativeLayout
        android:id="@+id/groupInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="3dp"
        android:layout_marginStart="83dp">

        <TextView
            android:id="@+id/groupName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Name"
            android:textColor="@color/white"
            android:textSize="19dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_last_seen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/groupName"
            android:layout_marginLeft="3dp"
            android:text="Last Seen"
            android:textColor="#E6E6E6"
            android:textSize="10dp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>