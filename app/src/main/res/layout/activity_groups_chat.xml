<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_discussion"
    tools:context=".activities.GroupsChat">

    <include
        android:id="@+id/group_chat_bar"
        layout="@layout/app_bar_layout"
        ></include>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_chat_bar"
        android:layout_above="@+id/mLinearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/group_chat_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textColor="@android:color/background_dark"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="60dp"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:padding="3dp"
        android:id="@+id/mLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/send_files_btn"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:padding="2dp"
            android:layout_marginBottom="2dp"
            android:layout_gravity="bottom"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_add_black_24dp" />

        <EditText
            android:id="@+id/input_groups_message"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:hint="Enter The Text Message..."
            android:background="@drawable/inputdiscussion"
            android:inputType="textMultiLine"
            android:editable="true"
            android:enabled="true"
            android:minLines="1"
            android:maxLines="6"
            android:isScrollContainer="true"
            android:focusable="true"
            android:padding="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="2dp"/>

        <ImageButton
            android:id="@+id/send_msg_button"
            android:layout_width="40dp"
            android:layout_marginTop="8dp"
            android:layout_height="38dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="2dp"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_send_black_24dp"
            android:background="@drawable/sendmessagebtn"/>

    </LinearLayout>

</RelativeLayout>